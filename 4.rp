fact = function(n) {
  if (n == 0) {
    return(1)
  } else {
    return(n * fact(n - 1))
  }
}

n = suppressWarnings(as.integer(readline("Enter a non-negative integer: ")))

if (is.na(n)) {
  cat("Invalid input. Please enter a valid integer.\n")
} else if (n < 0) {
  cat("Factorial is not defined for negative numbers.\n")
} else {
  result = fact(n)
  cat("The factorial of", n, "is", result, "\n")
}
